{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{CorrelationId}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/seeYouThereApi-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] [{CorrelationId}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "UseTestFlightData": true,
  "FlightSearch": {
    "Kiwi": {
      "ApiKey": "",
      "BaseUrl": "https://tequila-api.kiwi.com",
      "DefaultCurrency": "USD",
      "TimeoutSeconds": 30
    },
    "Amadeus": {
      "ApiKey": "",
      "ApiSecret": "",
      "BaseUrl": "https://test.api.amadeus.com",
      "DefaultCurrency": "USD",
      "TimeoutSeconds": 30
    }
  },
  "Cache": {
    "Enabled": true,
    "FlightSearchCacheTtlMinutes": 10
  },
  "RateLimit": {
    "TokenLimit": 100,
    "TokensPerPeriod": 20,
    "ReplenishmentPeriodSeconds": 60,
    "QueueLimit": 2,
    "RetryAfterSeconds": 60
  },
  "OpenTelemetry": {
    "Enabled": true,
    "OtlpEndpoint": "http://localhost:4317",
    "EnableConsoleExporter": true,
    "ServiceName": "SeeYouThereApi"
  }
}
